<div class="row">
  <section class="post post-small col-xs-12">
    <div class="row">
      <section class="post-content col-xs-12">
        <div class="row">
          <div class="profile col-xs-12">
            <div class="profile-img pull-left">
              <a href="about.html"><img src="https://s3.amazonaws.com/viking_education/web_development/web_app_eng/harry_potter_small.jpg" alt=""></a>
            </div>
            <div class="profile-info pull-left">
              <%= link_to "#{post.user.profile.first_name} #{post.user.profile.last_name}", user_profile_path(post.user) %>
              <p><small>Posted on <%= format_time(post.created_at) %></small></p>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12">
            <p>
              <%= post.post_text %>
            </p>
          </div>
        </div>
      </section>
    </div>

    <div class="row">
      <section class="post-footer col-xs-12">
        <div class="row">
          <section class="links col-xs-12">
            <% if current_user.liked_posts.include?(post) %>
              <%= link_to "Unlike", post_like_path(post),  method: :delete %>
            <% else %>
              <%= link_to "Like", post_like_path(post), method: :post %>
            <% end %>
            <%= link_to "Delete Post", user_post_path(current_user, post), method: :delete, class: "pull-right" if valid_post_user?(post) %>
          </section>
          <section class="likes col-xs-12">
            <p>
            </p>
          </section>
        </div>
      </section>
      <% @comments.each do |comment| %>
        <% if comment.commentable_id == post.id %>
          <div class="row">
            <section class="comment col-xs-12">
              <div class="row">
                <div class="profile col-xs-12">
                  <div class="profile-img pull-left">
                    <a href="about.html"><img src="https://s3.amazonaws.com/viking_education/web_development/web_app_eng/harry_potter_small.jpg" alt=""></a>
                  </div>
                  <div class="comment pull-left">
                    <%= link_to "#{comment.user.profile.first_name} #{comment.user.profile.last_name}", user_profile_path(comment.user) %>
                    <p><small>Said on <%= format_time(comment.created_at) %></small></p>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-xs-12">
                  <p>
                    <%= comment.comment_text %>
                  </p>
                </div>
              </div>
            </section>
          </div>
          <section class="links col-xs-12">
            <% if current_user.liked_comments.include?(comment) %>
              <%= link_to "Unlike", comment_like_path(comment),  method: :delete %>
            <% else %>
              <%= link_to "Like", comment_like_path(comment), method: :post %>
            <% end %>
            <%= link_to "Delete Comment", post_comment_path(post.id, comment.id), method: :delete, class: "pull-right" if valid_post_user?(comment) %>
          </section>
        <% else %>
          <% next %>
        <% end %>
        <hr>
      <% end %>
      <div class="row">
        <section class="col-xs-12">
          <%= simple_form_for @comment, url: post_comments_path(post) do |f| %>
            <%= f.input :comment_text %>
        </section>
      </div>
      <div class="row">
        <section class="post-footer col-xs-12">
          <%= f.button :submit %>
          <div class="clearfix"></div>
        <% end %>
        </div>
      </section>
    </div>
  </section>
</div>
