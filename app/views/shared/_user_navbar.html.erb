<div class="row">
  <header id="profile-header">
    <div class="cover-img">
      <% get_navbar_variables %>
      <% if @profile.cover_photo_id %>
        <%= image_tag @cover_photo.photo.expiring_url(60) %>
      <% else %>
        <img src="https://s3.amazonaws.com/viking_education/web_development/web_app_eng/hogwarts_small.jpg" alt="Cover Image" class="sr-only">
      <% end %>
    </div>
    <% if @user == current_user %>
      <h1 class="profile-username"><%= "#{current_user.profile.first_name} " "#{current_user.profile.last_name}"%></h1>
    <% else %>
      <h1 class="profile-username"><%= "#{@user.profile.first_name} " "#{@user.profile.last_name}"%></h1>
    <% end %>
    <section class="profile-img">
      <% if @profile.cover_photo_id %>
        <%= image_tag @profile_photo.photo.expiring_url(60) %>
      <% else %>
        <img src="https://s3.amazonaws.com/viking_education/web_development/web_app_eng/harry_potter_small.jpg" alt="profile">
      <% end %>
    </section>
    <section class="col-xs-12 profile-nav">
      <button type="button" aria-expanded="false" class="navbar-toggle">
        <span class="sr-only">"Toggle Navigation"</span>
        <span class="glyphicon glyphicon-menu-down"></span>
      </button>
      <ul class="collapse nav navbar-nav" role="menu">
        <li><%= link_to "Timeline", users_path(current_user) %></li>
        <li><%= link_to "About", user_path(current_user, current_user.profile)%></li>
        <li><%= link_to "Photos", user_photos_path(current_user) %></li>
        <li><%= link_to "Friends", friendings_path %></li>
        <li class="edit"><%= link_to "Edit Your Profile", edit_user_profile_path(current_user) %></li>
      </ul>
    </section>
  </header>
</div>
