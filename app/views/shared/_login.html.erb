<%= form_tag session_path do %>

  <%= label_tag do %>
    Email
    <%= text_field_tag :email %>
  <% end %>

  <%= label_tag do %>
    Password
    <%= password_field_tag :password %>
  <% end %>

  <%= submit_tag "Log in" %>

  <p>Don't have an account yet? <%= link_to "Sign up for one now!", signup_path %>

<% end %>
